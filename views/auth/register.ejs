<h2 class="page-header">Register</h2>
<% if (registerError) { %>
  <div class="error-message"><%= registerError %></div>
<% } %>  
<form action="/auth/register" method="POST">
  <div class="form-row">
    <div class="form-item">
      <label for="name">Name</label>
      <input type="text" id="name" name="name" value="<%= locals.name %>" required>
    </div>
  </div>
  <div class="form-row">
    <div class="form-item">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" value="<%= locals.email %>" required>
    </div>
  </div>
  <div class="form-row">
    <div class="form-item">
      <label for="password">Password</label>
      <input type="password" id="password" name="password" required>
    </div>
  </div>
  <button class="btn btn-primary" type="submit">Register</button>
</form>
<p>Back to login page</p>
<a class="btn btn-primary" href="/auth/login">Login</a>